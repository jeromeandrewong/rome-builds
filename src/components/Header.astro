---
import { LOGO_IMAGE, SITE } from "@config";
import LinkButton from "./LinkButton.astro";

import logoPNG from "/assets/logo1.png";
import logoSVG from "/assets/logo.svg";

export interface Props {
  activeNav?: "posts" | "tags" | "about" | "search";
}

const { activeNav } = Astro.props;
---

<header>
  <div class="mx-auto mt-5 flex max-w-3xl justify-center px-4 sm:justify-start">
    <div class="flex w-full justify-between">
      <div
        class="flex h-10 w-fit items-center space-x-1 rounded-md border bg-skin-fill p-1"
      >
        {
          activeNav !== "posts" ? (
            <a
              href="/posts"
              class="hover:bg-skin-card flex select-none items-center rounded-[0.2rem] px-3 py-1.5 text-sm font-medium outline-none"
            >
              Posts
            </a>
          ) : (
            <a
              href="/posts"
              class="bg-skin-accent  flex select-none items-center rounded-[0.2rem] px-3 py-1.5 text-sm font-medium outline-none"
            >
              Posts
            </a>
          )
        }
        {
          activeNav !== "tags" ? (
            <a
              href="/tags"
              class="hover:bg-skin-card flex select-none items-center rounded-[0.2rem] px-3 py-1.5 text-sm font-medium outline-none"
            >
              Tags
            </a>
          ) : (
            <a
              href="/tags"
              class="bg-skin-accent  flex select-none items-center rounded-[0.2rem] px-3 py-1.5 text-sm font-medium outline-none"
            >
              Tags
            </a>
          )
        }
        {
          activeNav !== "about" ? (
            <a
              href="/about"
              class="hover:bg-skin-card flex select-none items-center rounded-[0.2rem] px-3 py-1.5 text-sm font-medium outline-none"
            >
              About
            </a>
          ) : (
            <a
              href="/about"
              class="bg-skin-accent flex select-none items-center rounded-[0.2rem] px-3 py-1.5 text-sm font-medium outline-none"
            >
              About
            </a>
          )
        }
      </div>
      <div class="flex">
        <LinkButton
          href="/search"
          className={` focus-outline p-2 h-10`}
          ariaLabel="search"
          title="Search"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="scale-125"
            ><path
              d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
            ></path>
          </svg>
        </LinkButton>
        <a
          href="/"
          class="mx-1 py-1 text-xl font-semibold sm:static sm:text-2xl"
        >
          {
            LOGO_IMAGE.enable ? (
              <img
                class="rounded-full"
                src={LOGO_IMAGE.svg ? logoSVG : logoPNG}
                alt="Jerome"
                width={LOGO_IMAGE.width}
                height={LOGO_IMAGE.height}
              />
            ) : (
              SITE.title
            )
          }
        </a>
      </div>
    </div>
  </div>
</header>
